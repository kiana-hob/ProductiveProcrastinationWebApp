<div >
  <h5>
    Edit User Account
  </h5>

  <div>
    <form action="/modify_user" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
      </div>
      <div>
        <label for="username_box">Username</label>
        <input id="username_box" name="query_username" value="<%= @current_user.username %>"  placeholder="<%= @current_user.username %>">
      </div>
      <div>
        <label for="phone">Cell Number</label>
        <input type="tel" id="phone" name="query_phone" value="<%= @current_user.phone %>" placeholder="<%= @current_user.phone %>" required>
      </div>
      
      <div>
        <label for="student_box">Student</label>
        <input id="student_box" name="query_student" type="checkbox" value="1" <%= "checked" if @current_user.student %>>
      </div>
      <div>
        <label for="employed_box">Employed</label>
        <input id="employed_box" name="query_employed" type="checkbox" value="1" <%= "checked" if @current_user.employed %>>
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
